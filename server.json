{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.iamnishant51/atlas",
  "description": "Multi-stage AI pipeline MCP server for intelligent code generation. Features 7 stages: Intent → Context → Git → Decompose → Variants → Critique → Optimize. Supports Ollama, OpenAI, and Anthropic providers.",
  "repository": {
    "url": "https://github.com/IamNishant51/atlas-mcp-server",
    "source": "github"
  },
  "version": "1.0.0",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "atlas-mcp-server",
      "version": "1.0.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Your Ollama base URL (default: http://localhost:11434)",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "OLLAMA_BASE_URL"
        },
        {
          "description": "Your OpenAI API key",
          "isRequired": false,
          "format": "string",
          "isSecret": true,
          "name": "OPENAI_API_KEY"
        },
        {
          "description": "Your Anthropic API key",
          "isRequired": false,
          "format": "string",
          "isSecret": true,
          "name": "ANTHROPIC_API_KEY"
        }
      ]
    }
  ]
}
